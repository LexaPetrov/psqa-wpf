<Window x:Class="RGZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="600" MaxWidth="800" MaxHeight="600" Background="#FF803878" ResizeMode="CanMinimize" WindowStyle="None" BorderThickness="1">
    <Window.Resources>
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Border Name="border"
                    TextBlock.Foreground="White" TextBlock.TextAlignment="Center" >
                <ContentPresenter RecognizesAccessKey="True" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"></ContentPresenter>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="Gray"></Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="BorderBrush" Value="Yellow"></Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid Background="#FFD6DBE9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="548"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="3">
            <Rectangle x:Name="Rect_navigation" Fill="#FF803878" HorizontalAlignment="Left" Height="30"  VerticalAlignment="Top" Width="800" Margin="0,0,-8,0"/>
        </StackPanel>


        <Button x:Name="btn_Close" Template="{StaticResource ButtonTemplate}" Content="X" VerticalAlignment="Top" Margin="120,0,0,0"
                Height="30" Width="50" ToolTip="Close" Click="btn_Close_Click" FontFamily="Arial" FontSize="14" 
                Background="#FF803878" BorderThickness="0" Foreground="White" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Button x:Name="btn_Minimize" Template="{StaticResource ButtonTemplate}" Content="-" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="50" Margin="448,0,50,0" Height="30" ToolTip="Minimize"
                FontFamily="Times New Roman" FontSize="24" FontWeight="Bold"  
                BorderThickness="0" Foreground="White" Grid.Column="1" Click="Minimize_MouseDown" Background="#FF803878">
        </Button>


        <Rectangle x:Name="rect_menu" Fill="Black" HorizontalAlignment="Left" Height="568" Margin="0,30,0,0" VerticalAlignment="Top" Width="250"/>

        <Button x:Name="btn_openfile" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Left" Height="50" Margin="0,130,0,0" VerticalAlignment="Top" Width="48" BorderThickness="0" Padding="1,-2,1,1" Background="{x:Null}" >
            <Image Source="Resources/add-item.png" Height="32" Width="32" HorizontalAlignment="Center" Margin="0"/>
        </Button>

        <Button x:Name="utn_save" Template="{StaticResource ButtonTemplate}"  HorizontalAlignment="Left" Height="50" Margin="0,270,0,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Padding="1,-2,1,1" Background="{x:Null}">
            <Image Source="Resources/download.png" Height="32" Width="32"/>
        </Button>

        <Button x:Name="btn_settings" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Left" Height="50" Margin="0,340,0,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Padding="1,-2,1,1" Background="{x:Null}" Click="btn_settings_Click">
            <Image Source="Resources/processing.png" Height="32" Width="32"/>
        </Button>

        <Button x:Name="btn_exit" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Left" Height="50" Margin="0,540,0,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Padding="1,-2,1,1" Background="{x:Null}" Click="btn_exit_Click">
            <Image Source="Resources/shut-down.png" Height="32" Width="32"/>
        </Button>

        <Button x:Name="btn_closemenu" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Right" Height="50" Margin="0,45,10,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Background="{x:Null}" Click="btn_closemenu_Click" >
            <Image Source="Resources\arrow-round.png" Height="32" Width="32"></Image>
        </Button>

        <Button x:Name="btn_openmenu" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Right" Height="50" Margin="0,45,200,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Background="{x:Null}" Click="btn_openmenu_Click" >
            <Image Source="Resources/arrow-round-copy.png" Height="32" Width="32"/>
        </Button>

        <Button x:Name="btn_openfile_opened" Template="{StaticResource ButtonTemplate}" Content="открыть файл" HorizontalAlignment="Left" Margin="50,130,0,0" VerticalAlignment="Top" Width="190" Height="50" BorderThickness="0" FontSize="24" Foreground="White" Background="{x:Null}" FontWeight="Light"/>
        <Button x:Name="btn_save_opened" Template="{StaticResource ButtonTemplate}" Content="сохранить" HorizontalAlignment="Left" Margin="50,270,0,0" VerticalAlignment="Top" Width="190" Height="50" HorizontalContentAlignment="Center" FontSize="24" FontWeight="Light" BorderThickness="0" Foreground="White" Background="{x:Null}"/>
        <Button x:Name="btn_settings_open" Click="btn_settings_Click" Template="{StaticResource ButtonTemplate}" Content="настройки" HorizontalAlignment="Left" Margin="50,340,0,0" VerticalAlignment="Top" Width="190" Height="50" FontSize="24" FontWeight="Light" Background="{x:Null}" Foreground="White" BorderThickness="0"/>
        <Button x:Name="btn_exit_opened" Template="{StaticResource ButtonTemplate}" Click="btn_exit_Click"  Content="выход" HorizontalAlignment="Left" Margin="50,540,0,0" VerticalAlignment="Top" Width="190" BorderThickness="0" Height="50" FontSize="24" FontWeight="Light" Background="{x:Null}" Foreground="White" HorizontalContentAlignment="Center"/>

        <Button x:Name="btn_openfolder" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Left" Margin="0,200,0,0" VerticalAlignment="Top" Width="50" Height="50" Background="{x:Null}" BorderThickness="0">
            <Image Source="Resources/copy-item.png" Height="32" Width="32"/>
        </Button>

        <Button x:Name="btn_openfolder_opened" Template="{StaticResource ButtonTemplate}" Content="открыть папку" HorizontalAlignment="Left" Height="50" Margin="50,200,0,0" VerticalAlignment="Top" Width="190" BorderThickness="0" FontSize="24" FontWeight="Light" Foreground="White" Background="{x:Null}" />
        <Button x:Name="btn_about_opened"  Click="btn_about_Click" Template="{StaticResource ButtonTemplate}" Content="о программе" HorizontalAlignment="Left" Height="50" Margin="50,410,0,0" VerticalAlignment="Top" Width="190" Background="{x:Null}" Foreground="White" FontSize="24" FontWeight="Light" BorderThickness="0"/>

        <Button  x:Name="btn_about" Template="{StaticResource ButtonTemplate}" HorizontalAlignment="Left" Margin="0,410,0,0" VerticalAlignment="Top" Width="50" BorderThickness="0" Height="50" Background="{x:Null}" Click="btn_about_Click" >
            <Image Source="Resources/star.png" Height="32" Width="32"/>
        </Button>
        <TextBox x:Name="textBox_copyright" HorizontalAlignment="Left" Height="38" Margin="275,567,-57,-7" TextWrapping="Wrap" Text="Petrov-Chumakov 2017 (c) All Rights Received" VerticalAlignment="Top" Width="330" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" FontWeight="Light" Foreground="White" FontSize="10" Grid.Column="1" Focusable="False" Cursor="Arrow"/>
        <TextBox x:Name="textBox_name" HorizontalAlignment="Left" Height="85" Margin="10,45,0,0" TextWrapping="Wrap" Text="оценка критериев качества программы на C#  v. 1.0.2" VerticalAlignment="Top" Width="195" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0" FontWeight="Light" Foreground="White" FontSize="20" Focusable="False" AllowDrop="False" IsInactiveSelectionHighlightEnabled="True" SelectionBrush="{x:Null}" Cursor="Arrow"/>
        <Rectangle x:Name="rect_settings" Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="568" Margin="298,30,0,0" Stroke="Black" VerticalAlignment="Top" Width="250" StrokeDashArray="0 0"/>
        <TextBox x:Name="textBox_settings" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="300,30,0,0" TextWrapping="Wrap" Text="о программе" VerticalAlignment="Top" Width="250" BorderBrush="#FFF4F4F5" BorderThickness="0" Background="#FFF4F4F5" FontWeight="Light" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30" Focusable="False" SelectionBrush="{x:Null}" Cursor="Arrow"/>
        <Button x:Name="btn_apply" Content="принять" Grid.Column="1" HorizontalAlignment="Left" Margin="310,560,0,0" VerticalAlignment="Top" Width="100" Height="30" FontWeight="Light" FontSize="18" VerticalContentAlignment="Center" Background="{x:Null}" Click="btn_apply_Click" BorderThickness="3" BorderBrush="Black" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn_closeright" Content="закрыть" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="438,560,0,0" VerticalAlignment="Top" Width="100" BorderThickness="3" Background="{x:Null}" BorderBrush="Black" FontWeight="Light" FontSize="18" Click="btn_closeright_Click"/>
        <TextBox x:Name="textBox_description" Grid.Column="1" HorizontalAlignment="Left" Height="469" Margin="298,80,0,0" TextWrapping="Wrap" Text="Данная программа позволяет измерить метрики и критерии качества программы, написанной на языке C#. Спасибо, что используете именно этот продукт! Разработчики: Чумаков Роман (backend, связь: fun_q@mail.ru), Петров Алексей (frontend, связь: al1111997@yandex.ru) 2017" VerticalAlignment="Top" Width="250" Focusable="False" BorderBrush="{x:Null}" Background="#FFF4F4F5" FontWeight="Light" SelectionBrush="{x:Null}" TextAlignment="Center" FontSize="22" Cursor="Arrow"/>

    </Grid>

</Window>
